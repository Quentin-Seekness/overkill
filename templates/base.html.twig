<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Bootstrap 4.6 CSS #}
        {# <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous"> #}
        {% block bootstrap %}<link rel="stylesheet" href="{{ asset('css/bootswatch/bootstrap.min.css') }}">{% endblock %}
        {# Notre CSS #}
        {% block css %}<link rel="stylesheet" href="{{ asset('css/app.css') }}">{% endblock %}
    </head>
    <body>
        {% block nav %}
        {% set route_name = app.request.attributes.get('_route') %}
            <nav class="nav--container">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav--item{% if route_name == "letter_add" %}{{'--active'}}{% endif %}" data-bs-toggle="tab" href="{{ path('letter_add') }}">Nouvelle lettre</a>
                    </li>
                    <li class="nav-item">
                        <img class="logo--overkill" src="{{ asset('../images/overkill_logo_v2.svg') }}" alt="">
                    </li>
                    <li class="nav-item">
                        <a class="nav--item{% if route_name == "letter_browse" %}{{'--active'}}{% endif %}" data-bs-toggle="tab" href="{{ path('letter_browse') }}">Mes lettres</a>
                    </li>
                </ul>
            </nav>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            <p class="mt-5">Made with <span>&#127911;</span> by Seekness</p>
        {% endblock %}
        {# Bootstrap 4.6 JS #}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    </body>
</html>
